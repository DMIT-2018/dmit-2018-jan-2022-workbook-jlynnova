<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/holiday.css@0.9.8" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
    @*my css in a rendersection decalration
        this area will be replaced by code placed
        in the referenced section on a specific used on
        any  Content page.
        required: false makes this section optional on the Content page
    *@
    @RenderSection("CustomCSS", required: false)
</head>
<body>
    <header>
        <nav >
            <ul>
                <li >
                    <a  asp-area="" asp-page="/Index"> <img src="~/img/ChinookMusicMenuLogo.jpg" alt="Chinook logo" title="Go to Home"/></a>
                </li>
                <li >
                    <a  asp-area="" asp-page="/Index">Home</a>
                </li>
                <!--setup submenu (drop down menu) using holiday.css see holiday.js.org

                start with an li tag
                add a span tag: entry on the root menu
                add a ul tag: starts teh drop doen menu
                add any number of li / a tags: each represent an sub menu item

                -->
                <li>
                    <span>Samples</span>
                    <ul>
                         <li >
                        <a  asp-area="" asp-page="/SamplePages/Basics">Basics</a>
                        </li>
                        <li >
                            <a  asp-area="" asp-page="/SamplePages/Controls">Controls</a>
                        </li>
                        <li >
                            <a  asp-area="" asp-page="/SamplePages/AlbumsByGenreQuery">Query table with paging</a>
                        </li>
                    </ul>
                </li>            
                <li>
                    <a asp-area="" asp-page="/Privacy">Privacy</a>
                </li>
                <partial name="_LoginPartial" />
            </ul>
        </nav>
    </header>
    <div >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer >
            &copy; 2022 - Chinook WebApp - NAIT DMIT2018 Learing Sample (all rights reserved) <a asp-area="" asp-page="/Privacy">Privacy</a>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>